---
import type { ClassValue } from "clsx"
import { cn } from "@lib/classUtils"

interface Props {
  className?: ClassValue
}

const { className } = Astro.props
---

<article
  class={cn(
    "rounded-2xl border border-blue-deep size-full relative overflow-hidden p-4",
    className
  )}
>
  <slot />
</article>
